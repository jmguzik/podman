   echo "FROM alpine" > "$DIR"/Dockerfile
   run_buildah 0 bud --signature-policy ${TESTSDIR}/policy.json "$DIR"/Dockerfile
@@ -1968,7 +1973,7 @@ _EOF

 @test "bud-squash-hardlinks" {
